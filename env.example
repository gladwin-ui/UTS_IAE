# ============================================
# MySQL Database Configuration
# ============================================
# Konfigurasi ini digunakan oleh SEMUA services
# Pastikan MySQL server sudah running dan user memiliki akses

DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
# Catatan: Jika MySQL tidak menggunakan password, biarkan DB_PASSWORD kosong atau hapus baris ini

# ============================================
# Database Names untuk masing-masing Service
# ============================================
# Setiap service menggunakan database terpisah
# Pastikan database sudah dibuat (jalankan setup_database.sql)

DB_NAME_USER=educonnect_user
DB_NAME_COURSE=educonnect_course
DB_NAME_ENROLLMENT=educonnect_enrollment
DB_NAME_PROGRESS=educonnect_progress
DB_NAME_REVIEW=educonnect_review

# ============================================
# API Gateway Configuration
# ============================================
API_GATEWAY_PORT=5000
JWT_SECRET_KEY=educonnect-secret-key-change-in-production

